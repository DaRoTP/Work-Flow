{
  "compilerOptions": {
    "baseUrl": "./",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "sourceMap": true,
    "outDir": "dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false // this one is for preventing the typescript errors while using @Inject()
  },
  "include": ["src/**/*"]
}
